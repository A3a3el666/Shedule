@model Dictionary<string, List<ScheduleEntry>>
@using Schedule.Models;

<!DOCTYPE html>
<html>
<head>
    <title>Schedule</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }

        h2 {
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
    </style>
</head>
<body>
    <h2>Schedule</h2>

    <form method="post" action="@Url.Action("SaveSchedule", "Schedule")">
        <table>
            <thead>
                <tr>
                    <th>Day</th>
                    <th>Subjects</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var day in Model.Keys)
                {
                    <tr>
                        <td>@day</td>
                        <td>
                            <ul>
                                @foreach (var entry in Model[day])
                                {
                                    <li>@entry.SubjectId: @entry.StartTime - @entry.EndTime</li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Schedule</button>
    </form>
    <a href="@Url.Action("CreateScheduleForm", "Schedule")" class="back-button">Back</a>
</body>
</html>
