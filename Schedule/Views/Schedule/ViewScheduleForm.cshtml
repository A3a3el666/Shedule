@using Schedule.Models
@model List<ScheduleEntry>

<h1>School Schedule</h1>

<table class="table">
    <thead>
        <tr>
            <th>Day</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Subject</th>
            <th>Teacher</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.DayOfWeek</td>
                <td>@entry.StartTime</td>
                <td>@entry.EndTime</td>
                <td>@entry.Subject.SubjectName</td>
                <td>@entry.Teacher.FullName</td>
            </tr>
        }
    </tbody>
</table>
